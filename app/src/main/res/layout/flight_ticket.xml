<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="20dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/gradient_background"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/block_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            >

        <TextView
                android:id="@+id/departure_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:30"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
                android:id="@+id/illustration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_route_view"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintStart_toEndOf="@+id/departure_time"
                app:layout_constraintEnd_toStartOf="@+id/arrive_time"
                app:layout_constraintBottom_toBottomOf="@+id/departure_time"
                app:layout_constraintTop_toTopOf="@+id/arrive_time"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:id="@+id/arrive_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:30"
                android:textStyle="bold"
                android:textColor="?attr/textColor"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/block_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/block_1"
            android:layout_marginTop="8dp"
            tools:layout_editor_absoluteX="20dp">

        <TextView
                android:id="@+id/source_airport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AO LDA"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/filled_rounded_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/duration_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="03h 30m"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="?attr/textColor"
                app:layout_constraintBottom_toBottomOf="@+id/source_airport"
                app:layout_constraintTop_toTopOf="@+id/destination_airport"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/source_airport"
                app:layout_constraintEnd_toStartOf="@+id/destination_airport"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

        <TextView
                android:id="@+id/destination_airport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DL"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/yellow_500"
                android:textSize="12sp"
                android:paddingHorizontal="5dp"
                android:background="@drawable/black_rounded_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/block_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/block_2"
            android:layout_marginTop="24dp"
            tools:layout_editor_absoluteX="20dp">

        <LinearLayout
                android:id="@+id/block_3_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintEnd_toStartOf="@+id/block_3_2"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginEnd="8dp">

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/rounded_background"
                    android:contentDescription="@string/airlinelogo" />

            <TextView
                    android:id="@+id/airline_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/airline_name"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/block_3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                    android:layout_width="18dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_luggage"

                    />

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_rice_ball"
                    android:layout_marginStart="10dp"
                    />

        </LinearLayout>

        <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¬500"
                android:textColor="?attr/textColor"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/block_3_2"
                app:layout_constraintHorizontal_bias="1.0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>